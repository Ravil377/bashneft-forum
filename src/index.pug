extends base/pug/base

append variables
    - var title = 'Главная страница сайта'
    - var pageClass = 'homepage'
    - var menuHref = '/'

block top-position
    section.top-position
        .module.d-flex
            .container-xxl
                img.img-fluid.module__image.d-md-none(src="./images/man1.png" alt="Мужчина")
                .module__title-container
                    .module__title-content
                        h1.module__title ИССЛЕДОВАНИЕ СКВАЖИН:
                            span ЦЕЛЕПОЛАГАНИЕ 
                                +icon('arrow-right')
                            span ТЕХНОЛОГИИ
                                +icon('arrow-right')
                            span ЭФФЕКТ
                        .module__address 
                            +icon('location')
                            | Республика Башкортостан, г.&nbsp;Уфа,&nbsp;ул.&nbsp;Ленина&nbsp;25/29, 
                            span гостиничный комплекс «Башкортостан»
                //- .module__logo-container.d-flex.mb-30.flex-sm-row.flex-column
                    //- img.img-fluid.module__logo(src="./images/logo-color.png" alt="Башнефть")
                    .module__date.mt-20.mt-sm-0 15-16 июня 
                        span 2022
                
block partition
    section.partition#partition
        .container-xxl
            h2.partition__title.title СЕКЦИИ 
                span конференции
            .partition__content.d-flex.col-lg-6.gap-5.flex-lg-row.flex-column
                a(href="#section1").partition_block
                    .partition_block-title 1 СЕКЦИЯ
                    .partition_block-description Результаты исследований как инструмент принятия решений при управлении разработкой месторождений
                    img.img-fluid.partition_block-image(src="./images/woman.png" alt="Девушка")
                a(href="#section2").partition_block
                    .partition_block-title 2 СЕКЦИЯ
                    .partition_block-description ГИС и Петрофизика
                    img.img-fluid.partition_block-image(src="./images/petrolium.png" alt="Земля в разрезе")
